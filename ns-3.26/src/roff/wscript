# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('roff', ['core'])
    module.source = [
        'model/roff.cc',
        'helper/roff-helper.cc',
        ]

    module_test = bld.create_ns3_module_test_library('roff')
    module_test.source = [
        'test/roff-test-suite.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'roff'
    headers.source = [
        'model/roff.h',
        'helper/roff-helper.h',
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

